{
    "compilerOptions": {
        "target": "ESNext", // Adjust to your target ECMAScript version
        "module": "ESNext", // Adjust to your module system (e.g., "ESNext", "CommonJS", etc.)
        "moduleResolution": "node", // Make it so `import Thing from "./thing.js"` imports from the thing.ts file
        "outDir": "./dist", // Specifies the output directory
        "rootDir": "./src", // Specifies the source directory
        "strict": true  
    },
    "include": [
        "src/*.ts"
    ], // Specifies which files should be included in the compilation
    "exclude": [
        "node_modules"
    ] // Optional: Exclude specific directories if needed
}